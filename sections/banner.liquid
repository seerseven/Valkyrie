<div class="row">
  <div class="banner" style="background-image:url('{{ section.settings.image | img_url: 'master' }}')" >
      <h1 class="page_title">{{ page_title }}</h1>
  </div>
</div>


{% schema %}
{
    "name": "Banner",
    "class": "banner-section",

   "settings": [
      {
        "id": "page_title",
        "type": "text",
        "label": "Page Title",
        "default": "Enter page Title..."
      },
      {
        "id": "image",
        "type": "image_picker",
        "label": "Choose image"
      }
    ]
  }

{% endschema %}


