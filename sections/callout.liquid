 <div class="row p-3 mx-auto">
  <div class="cura cy">
    <h4 style ="color: {{section.settings.callout_color_title}}">{{section.settings.callout_title}}</h4>
    <p style ="color: {{section.settings.callout_color_text}}">{{section.settings.callout_text}}</p>
    <p style ="color: {{section.settings.callout_color_tagline}}">{{section.settings.callout_tagline}}</p>
  </div>
</div>

{% schema %}
{
    "name": "Callout",
    "class": "callout-section",

   "settings": [
      {
        "type": "text",
        "id": "callout_title",
        "label": "Callout Title",
        "default": "Enter callout title..."
      },
      {
        "type": "color",
        "id": "callout_title_color",
        "label": "Title Color",
        "default": "#000000"
      },
      {
        "type": "text",
        "id": "callout_text",
        "label": "Callout Text",
        "default": "Enter callout text..."
      },
      {
        "type": "color",
        "id": "callout_text_color",
        "label": "Text Color",
        "default": "#000000"
      },
      {
        "type": "text",
        "id": "callout_tagline",
        "label": "Callout Tagline",
        "default": "Enter callout tagline..."
      },
      {
        "type": "color",
        "id": "callout_tagline_color",
        "label": "Tagline Color",
        "default": "#000000"
      }
    ]
  }

{% endschema %}